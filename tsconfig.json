{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "noEmitOnError": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "sourceRoot": "src",
    "baseUrl": "src",
    "sourceMap": true,
    "newLine": "LF",
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
